	}
	
	public int myIndexOf(int caracter){
		return caracter;
	}
	
	public int myLastIndexOf(int caracter){
		return caracter;
	}
	
	public int myLength(){
		int contador=0;
		
		for (int i=0; i<cadena.length; i++) {
			if (cadena[i]==' '||cadena[i]!=' ') {
				contador++;
			}
		}
		return contador;
	}
	
